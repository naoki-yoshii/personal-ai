{
    "name":  "personal-ai-monorepo",
    "private":  true,
    "packageManager":  "pnpm@9.0.0",
    "workspaces":  [
                       "apps/*",
                       "packages/*"
                   ],
    "scripts":  {
                    "lint":  "eslint apps/**/*.{ts,tsx,js,jsx} packages/**/*.{ts,tsx,js,jsx}",
                    "format":  "prettier . --check",
                    "format:fix":  "prettier . --write",
                    "build":  "node -e \"console.log(\u0027build ok\u0027)\"",
                    "test":  "node -e \"process.exit(0)\""
                }
}